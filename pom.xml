		<xalan.version>2.7.1</xalan.version>
		<org.jruby.complete.version>9.0.5.0</org.jruby.complete.version>
		<org.freemarker.version>2.3.23</org.freemarker.version>

	</properties>

	<!-- Plugin Repositories -->
	<pluginRepositories>
		<pluginRepository>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>central</id>
			<name>Maven Central Repository</name>
			<url>${central.repo.url}</url>
		</pluginRepository>
	</pluginRepositories>

	<!-- Dependency local repo -->
	<repositories>
		<repository>
			<id>central</id>
			<name>Maven Central Repository</name>
			<url>${central.repo.url}</url>
			<snapshots>
				<enabled>false</enabled>
				<updatePolicy>never</updatePolicy>
			</snapshots>
			<releases>
				<enabled>false</enabled>
				<updatePolicy>never</updatePolicy>
